{
  "name": "webgsm-checkout-pro",
  "version": "1.0.0",
  "description": "WebGSM Checkout Pro - Custom WooCommerce checkout with ANAF integration",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/js/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "plugins/*/assets/js/**/*.js",
      "themes/*/assets/js/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "coverage/js",
    "coverageReporters": [
      "html",
      "text",
      "lcov"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "globals": {
      "jQuery": true,
      "ajaxurl": "/wp-admin/admin-ajax.php"
    }
  }
}
